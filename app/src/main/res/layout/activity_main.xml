<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        android:layout_marginTop="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/personality"
        android:layout_width="135dp"
        android:layout_height="109dp"
        android:layout_gravity="center"
        android:layout_marginTop="75dp"
        android:background="@drawable/shape"
        android:text="유형테스트"
        android:layout_marginLeft = "20dp"
        android:textColor="#FFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.123"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/couple"
        android:layout_width="135dp"
        android:layout_height="109dp"
        android:layout_gravity="center"
        android:layout_marginTop="76dp"
        android:background="@drawable/shape"
        android:text="유형별 궁합"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:layout_marginLeft = "20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.123"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/personality" />

    <Button
        android:id="@+id/mbtiTest"
        android:layout_width="135dp"
        android:layout_height="109dp"
        android:layout_gravity="center"
        android:layout_marginTop="76dp"
        android:background="@drawable/shape"
        android:text="찐테스트"
        android:layout_marginRight="20dp"
        android:textColor="#FFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.616"
        app:layout_constraintStart_toEndOf="@+id/couple"
        app:layout_constraintTop_toBottomOf="@+id/humor" />

    <Button
        android:id="@+id/humor"
        android:layout_width="135dp"
        android:layout_height="109dp"
        android:layout_gravity="center"
        android:layout_marginTop="75dp"
        android:background="@drawable/shape"
        android:text="유머테스트"
        android:layout_marginRight="20dp"
        android:textColor="#FFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.646"
        app:layout_constraintStart_toEndOf="@+id/personality"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111"
        />

</androidx.constraintlayout.widget.ConstraintLayout>